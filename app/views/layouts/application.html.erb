<!DOCTYPE html>
<html>
  <head>
    <title>ShopifyWebhooks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <!-- Brand/logo -->
      <a class="navbar-brand" href="/">
        <img src="https://cdn.shopify.com/s/files/1/0253/5895/8626/files/Asset_2_3x_8a6bfbce-2f59-47d3-a992-223d7df03be3.png?5572" alt="logo" style="width:100px;">
      </a>
      
      <!-- Links -->
      <ul class="navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to('Products', products_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to('Orders', orders_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <a href="/products/start_scanning" class="nav-link">Start Scanning</a>
        </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-link") %>                </li>
        <% else %>
        <li class="nav-item">
          <%= link_to('Login', new_user_session_path, class: "nav-link") %>  
        </li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
