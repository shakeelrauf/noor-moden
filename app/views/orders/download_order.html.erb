      <tr>
        <th style="text-align: center;">Pos</th>
        <th style="text-align: center;" colspan="2">Menge</th>
        <th style="text-align: center;">SKU</th>
        <th style="text-align: center;">Einzelpries EUR</th>
        <th style="text-align: center;">Gesamtreis EUR</th>
      </tr>
    </thead>
    <tbody>
      <% @lineitems.each_with_index do |lineitem, index| %>
        <tr>
          <td style="text-align: right;"><%= index + 1 %></td>
          <td style="text-align: right;"><%= lineitem.order_qty %></td>
          <td style="text-align: right;"></td>
          <td style="text-align: right;"><%= lineitem.sku %></td>
          <td style="text-align: right;"><%= lineitem.price %></td>
          <td style="text-align: right;"><%= lineitem.total %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="5" style="">Gesamt Netto</td>
        <td style="text-align: right;"><%= line_item_subtotal(@lineitems) %></td>
      </tr>
      <tr>
        <td colspan="5" style="text-align: right;">Zuzuglich 19% MuSt. <%=line_item_subtotal(@lineitems) %></td>
        <td></td>
      </tr>
      <tr>
        <td colspan="5" style="">Gesamtbetrag</td>
        <td style="text-align: right;"><%=line_item_subtotal(@lineitems) %></td>
      </tr>
    
    </tbody>
</table>

