<div class="container">
  <p id="notice"><%= notice %></p>



<div class="invoice_no">
<div style="float: left;font-size: 20px;">Lieferschein No: <%= @order.id %></div>
<div style="float: right;font-size: 20px;">Lieferdatum: <%= @order.created_at.to_date %></div>
