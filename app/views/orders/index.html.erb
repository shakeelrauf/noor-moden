<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Orders</h1>
  <%#= link_to 'New Order', new_order_path, class: "btn btn-primary", style: 'float: right;margin-bottom: 10px;'%>

  <form action="/products">
    <div class="form-group">
      <input type="text" name="query" value="<%= params[:query] %>" class='form-control col-6' placeholder="Search using product or variant id">
    </div>
  </form>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Variant Id</th>
        <th>Shopify Product Id</th>
        <th>Order qty</th>
        <th>Remain qty</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.variant_id %></td>
          <td><%= order.product_id %></td>
          <td><%= order.order_qty %></td>
          <td><%= order.remain_qty %></td>
          <td><%= order.total %></td>
          <td><%#= link_to 'Show', order %></td>
          <td><%#= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination-index">
    <%= will_paginate @orders %>
  </div>
</div>

<style type="text/css">
  .pagination-index .pagination{
    justify-content: center !important;
  }
</style>
