<div class="col-8">
  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :shopify_product_id, "Shopify Product Id" %>
      <%= form.number_field :shopify_product_id , class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :variant_id, "Shopify Variant Id" %>
      <%= form.number_field :variant_id , class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :inventory %>
      <%= form.number_field :inventory, class: 'form-control', required: true %>
    </div>

  <!--   <div class="form-group">
      <%= form.label :barcode %>
      <%= form.text_field :barcode, class: 'form-control' %>
    </div> -->

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price , step: ".01", class: 'form-control', required: true%>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
