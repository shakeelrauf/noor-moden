<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>
  <%= link_to 'New Product', new_product_path, class: "btn btn-primary", style: 'float: right;margin-bottom: 10px;' %>

  <form action="/products">
    <div class="form-group">
      <input type="text" name="query" value="<%= params[:query] %>" class='form-control col-6' placeholder="Search using product or variant id">
    </div>
  </form>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Shopify product Id</th>
        <th>Shopify Variant Id</th>
        <th>Inventory</th>
        <th>Barcode</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.model_number %></td>
          <td><%= product.shopify_product_id %></td>
          <td><%= product.variant_id %></td>
          <td><%= product.inventory %></td>
          <td>
            <%= product.barcode.to_s.html_safe %>
            <br/>
            <span>000<%= product.id %></span>
          </td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <% if current_user.role == "admin" %>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination-index">
    <%= will_paginate @products %>
  </div>

</div>
<style type="text/css">
  .pagination-index .pagination{
    justify-content: center !important;
  }
</style>
